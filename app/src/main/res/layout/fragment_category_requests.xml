<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Manager.CategoryRequestsFragment">

        <TextView
            android:id="@+id/catReqTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Category requests:"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/requests_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catReqTv"></ListView>
    <LinearLayout
        android:id="@+id/start_session_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/blkk"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/add_category"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/card_item"
            android:text="Add New Category"
            android:textStyle="bold" />
    </LinearLayout>

    </RelativeLayout>

