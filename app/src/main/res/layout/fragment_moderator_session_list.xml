<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Moderator.ModeratorSessionListFragment"
         >


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="My Sessions:"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/moderator_session_list"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv2"></ListView>

    <LinearLayout
        android:id="@+id/addSession"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/blkk"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new session"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


    </LinearLayout>

    </RelativeLayout>